#Simple python script to perform simple calculations

#Defining operator functions
def add(x, y):
    return x + y
def subtract(x, y):
    return x - y
def multiply(x, y):
    return x * y
def divide(x, y):
    return x / y

#arrays of operator symbols and functions
symbol = ["+", "-", "x", "/"]
operators = [add, subtract, multiply, divide]

#Function to ask if the user wants to calculate
def ask_calculate(prompt):
    while True:
        x = input(f"Would you like to calculate {prompt} (Y/N): ").upper()
        if x in ["N", "NO"]:
            print("Goodbye")
            exit()
        elif x in ["Y", "YES"]:
            break
        else:
            print("Input Error: not y or n")

#Function to get a number from the user
def get_number(order):
    while True:
        try:
            return float(input(f"Enter {order} number: "))
        except ValueError:
            print("Input Error: not a number")

#Function to get a number from the user
def get_operator():
    print("Select an operation:")
    print("1. Add")
    print("2. Subtract")
    print("3. Multiply")
    print("4. Divide")
    while True:
        x = input("Enter choice (1/2/3/4): ")
        if x not in ["1", "2", "3", "4"]:
            print("Input Error: Not 1, 2, 3, or 4")
            continue
        else:
            return int(x)-1

#Function to calculate, check for division by 0, and print result
def calculate(x, y, operator):
    if (operator == 3 and y == 0):
        print("Input Error: Division by zero")
        return
    print(f"{x} {symbol[operator]} {y} =  {operators[operator](x,y)}" )


#Introducing program and asking if they want to calculate
print("This program performs addition, subtraction, multiplication, and division.")
ask_calculate("?")

#Performing calculation
while True:
    x = get_number("first")          
    operator = get_operator()
    y = get_number("second")
    calculate(x, y, operator)
    ask_calculate("again?")
